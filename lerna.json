{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.3.0-rc.1",
  "command": {
    "publish": {
      "directory": "{workspaceRoot}/{projectRoot}/package"
    },
    "version": {
      "exact": true,
      "forcePublish": true,
      "preid": "rc",
      "changelog": true,
      "conventionalCommits": true,
      "changelogPreset": "@cere/media-sdk-changelog-preset",
      "message": "Release %s"
    }
  }
}
